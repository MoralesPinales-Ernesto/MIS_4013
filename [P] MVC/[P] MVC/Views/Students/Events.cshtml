@model List<_P__MVC.Controllers.Event>
@{
    ViewData["Title"] = "Student Events";
}
<img src="https://images.unsplash.com/photo-1540575467063-178a50c2df87?ixlib=rb-4.1.0&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&q=80&w=1170"
     class="img-fluid rounded mb-4" alt="University Campus" style="max-height: 1000px; object-fit: cover; width: 100%;" />

<h2 class="mb-4">Student Events</h2>
<div class="table-responsive">
    <table class="table table-striped table-hover align-middle"">
        <thead class="table-primary">
            <tr>
                <th></th>
                <th>Event Name</th>
                <th>Date</th>
                <th>Location</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @for (int i = 0; i < Model.Count; i++)
            {
                var evt = Model[i];
                <tr>
                    <td>
                        <img src="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/icons/calendar-event.svg"
                             alt="Event" width="24" height="24" />
                    </td>
                    <td>
                        <a href="#" data-bs-toggle="modal" data-bs-target="#eventModal@i">@evt.Name</a>
                    </td>
                    <td>@evt.Date.ToString("yyyy-MM-dd")</td>
                    <td>@evt.Location</td>
                    <td>
                        <button class="btn btn-primary btn-sm">Register</button>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

@for (int i = 0; i < Model.Count; i++)
{
    var evt = Model[i];
    <div class="modal fade" id="eventModal@i" tabindex="-1" aria-labelledby="eventModalLabel@i" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="eventModalLabel@i">@evt.Name</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <p><strong>Date:</strong> @evt.Date.ToString("yyyy-MM-dd")</p>
                    <p><strong>Location:</strong> @evt.Location</p>
                    <p>Lorem ipsum dolor sit amet, consectetur adipiscing elit. More event details here.</p>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                    <button type="button" class="btn btn-primary">Register</button>
                </div>
            </div>
        </div>
    </div>
}